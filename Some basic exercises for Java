//A Java program that will print numbers from 0 to 200.

public class Assignment3 {

   public static void main (String args []) { 

          for (int i = 0; i<201; i++) {
            System.out.println(i);
            }
   }

}



//Rewrite the Java code to use while loop instead of a for loop.
//for loop 
 public class Assignment3{
     public static void main (String [] args) {
       int sum = 0;
       for (int n = 0; n < 100; n++) {
           sum = sum + n;
       }
       System.out.println(sum);
       }
}       
       
       

//While loop
 public class Assignment3{
     public static void main (String [] args) { 
         int sum = 0; 
         int n = 0; 
         while (n < 100) { 
         sum += n++;
         } 
     System.out.println(sum);
     }
}
